{
  "name": "vscode-mcp-server",
  "displayName": "VS Code MCP Server",
  "description": "MCP server providing VS Code language intelligence and debugging capabilities",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-mcp.startServer",
        "title": "Start MCP Server"
      },
      {
        "command": "vscode-mcp.stopServer",
        "title": "Stop MCP Server"
      },
      {
        "command": "vscode-mcp.testTool",
        "title": "Test MCP Tool at Cursor"
      }
    ],
    "configuration": {
      "title": "VS Code MCP Server",
      "properties": {
        "vscode-mcp.port": {
          "type": "number",
          "default": 8991,
          "description": "Port for the MCP server"
        }
      }
    }
  },
  "bin": {
    "vscode-mcp-server": "./out/mcp/standalone-server.js"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:ci": "npm test",
    "test:unit": "VSCODE_TEST_REPORTER=vscode node ./out/test/runTest.js",
    "test:watch": "npm run compile && npm run test:unit -- --watch",
    "start:mcp": "node ./out/mcp/standalone-server.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^22.10.0",
    "@types/mocha": "^10.0.6",
    "@types/glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^8.57.1",
    "glob": "^11.0.3",
    "mocha": "^11.7.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.2"
  }
}
