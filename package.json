{
  "name": "vscode-mcp-server",
  "displayName": "VS Code MCP Server",
  "description": "MCP server providing VS Code language intelligence and debugging capabilities",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-mcp.startServer",
        "title": "Start MCP Server"
      },
      {
        "command": "vscode-mcp.stopServer",
        "title": "Stop MCP Server"
      }
    ],
    "configuration": {
      "title": "VS Code MCP Server",
      "properties": {
        "vscode-mcp.port": {
          "type": "number",
          "default": 3000,
          "description": "Port for the MCP server"
        }
      }
    }
  },
  "bin": {
    "vscode-mcp-server": "./out/mcp/standalone-server.js"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "start:mcp": "node ./out/mcp/standalone-server.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "20.x",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0"
  }
}
